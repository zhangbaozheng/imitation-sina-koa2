{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "commonjs": true,
        "node": true
    },
    //important
    "rules": {
        "indent": [
            "error",
            4
        ], //4个空格
        "quotes": [ //单引号
            1,
            "single"
        ],
        "semi": [ //不使用分号
            "error",
            "never"
        ]
    }
}